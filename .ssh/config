# Connection multiplexing - reuse connections to reduce YubiKey touches
Host *
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%h-%p
    ControlPersist 36000

# github account
AddKeysToAgent yes
Host ghe camaero.ghe.com
	HostName camaero.ghe.com
	User git
	IdentityFile ~/.ssh/id_ed25519_sk_rk_ca
	IdentitiesOnly yes
	AddKeysToAgent yes

Host github.com
	IdentitiesOnly=yes
	HostName github.com
	User git
	PreferredAuthentications publickey
	IdentityFile ~/.ssh/personal

Host github.com-work
	IdentitiesOnly=yes
	HostName github.com
	PreferredAuthentications publickey
	IdentityFile ~/.ssh/github_malloy

